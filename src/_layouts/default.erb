<!doctype html>
<html lang="en-US">
  <head>
    <%= liquid_render 'head', metadata: site.metadata, title: data.title %>
  </head>
  <body>
        <!-- Page content here -->
    <main class="grid grid-cols-5 sm:gap-1 md:gap-4">
        <div class="hidden sm:block w-auto ml-auto max-w-3xs pl-4 print:hidden">
            <div class="ml-auto mt-13 lg:mt-15">
                <%= slotted :left_pane %>
            </div>
            <div class="xl:hidden ml-auto mt-2">
                <%= slotted :right_pane %>
            </div>
        </div>

        <div class="col-span-5 sm:col-span-4 md:col-span-4 xl:col-span-3 max-w-4xl print:col-span-5 print:max-w-none">
          <div class="min-h-screen md:mt-4 md:mr-3">
            <%= yield %>
          </div>
        </div>

        <div class="hidden xl:block mr-auto align-left max-w-3xs pr-4 print:hidden">
            <div class="ml-auto mt-15">
                <%= slotted :right_pane %>
            </div>
        </div>
    </main>
  </body>
</html>
