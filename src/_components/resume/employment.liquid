<section id="employment">
  <h2 class="h2">Employment</h2>

  <dl class="my-2col-grid gap-y-4 print:gap-y-2 print:grid-cols-1">
    {% for job in cv.career %}
      {% rendercontent 'dt_left', add_style: 'hidden sm:block print:hidden' %}<date>{{ job.start_year }}–{{ job.end_year }}</date>{% endrendercontent %}
      {% rendercontent 'dd_right' %}
        <header class="h4">
          <span class="font-bold">{{ job.title }}</span>,
          <a class="link-hover" href="{{ job.link }}"><span class="hidden sm:inline">{{ job.company }}</span><span class="sm:hidden">{{ job.company_abbrev }}</span></a>

          <div class="screen:sm:hidden float-right text-sm">{{ job.start_year }}–{{ job.end_year }}</div>
        </header>

        <div class="prose prose-sm leading-tight max-w-none">{{ job.description }}</div>
        {% if job.projects.size > 0 %}
          <ul class="">
            {% for project in job.projects %}
              <li class="pt-2 print:pt-0.5 pl-2 sm:pl-0">
                <div class="h5 print:hidden"><a class="link-hover" href="{{ project.link }}">{{ project.title }}</a></div>
                <div class="prose prose-sm max-w-none leading-tight print:hidden">{{ project.description | markdownify | remove: '<p>' | remove: '</p>' }}</div>
                <div class="prose hidden print:block leading-tight prose-sm max-w-none"><span class="hidden print:inline font-semibold">{{ project.title }}:</span> {{ project.short_desc | markdownify | remove: '<p>' | remove: '</p>' }}</div>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      {% endrendercontent %}
    {% endfor %}
  </dl>
</section>
