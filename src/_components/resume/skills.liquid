<section id="skills" class="grid">
    <h4 class="col-1 text-xs font-mono-code font-bold align-top pr-2">Coding:</h4>
    <ul class="col-2 flex flex-wrap justify-start gap-x-1">
    {% for item in cv.skills.languages %}
        <li class="inline-block text-xs text-nowrap align-top">{{ item }}</li>
    {% endfor %}
    </ul>

    <h4 class="col-1 text-xs font-mono-code font-bold align-top pr-2">Tools:</h4>
    <ul class="col-2 flex flex-wrap justify-start gap-x-1">
        {% for item in cv.skills.tools %}
            <li class="inline-block text-xs text-nowrap">{{ item }}</li>
        {% endfor %}
    </ul>

    <h4 class="col-1 text-xs font-mono-code font-bold align-top pr-2">Skills:</h4>
    <ul class="col-2 flex flex-wrap justify-start gap-x-1">
    {% for item in cv.skills.career %}
        <li class="inline-block text-xs text-nowrap">{{ item }}</li>
    {% endfor %}
    </ul>
</section>
